@inherits UmbracoViewPage<EcBooksSection>
@using ClientDependency.Core.Mvc;
@using JB.Backoffice.GlobalTrade;
@{
    EcBooksSection booksection = Model;

    Html.RequiresCss("~/styles/css/booksSection.css");
    Html.RequiresJs("~/scripts/ec/booksSection.js");
    var booksRepository = new BooksRepository();
    var books = booksRepository.GetAll();

}
<section class="page-section books-section container">
    @if (books.Count() > 0)
    {
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>Book Offers</h4>
            </div>
            <div class="panel-body">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Title</th>
                            <th>Price</th>
                            <th>Buy</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (Book book in books)
                        {
                            <tr>
                                <td>@book.Title</td>
                                <td>@string.Format("£{0:0.00}", book.Price)</td>
                                <td><button class="btn btn-primary">Add to Basket</button></td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>


















    }

</section>